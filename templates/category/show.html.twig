{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la catégorie :  </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / <a href="{{ path("program_show", { id: program.id }) }}">{{ program.title }}</a></h2>
            <p>{{ program.synopsis }}</p>
            {# Lien vers la fiche de la série : #}
            {# <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a> #}
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}