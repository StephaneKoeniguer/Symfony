{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>Season index</h1>
    {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                {{ message }}
                </div>
            {% endfor %}
    {% endfor %}
    <a href="{{ path('app_season_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Année</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a href="{{ path('app_season_show', {'id': season.id}) }}">Voir</a>
                    <a href="{{ path('app_season_edit', {'id': season.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de saisons trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
