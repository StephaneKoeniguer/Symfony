{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Épisode{% endblock %}

{% block body %}
    <h1>Épisode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Épisode numéro</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_episode_index') }}">Retour à la liste des épisodes</a>

    <a href="{{ path('app_episode_edit', {'id': episode.id}) }}">Modifier</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
